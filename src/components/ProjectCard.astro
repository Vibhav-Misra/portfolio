---
const { project } = Astro.props;
---
<a href={`/projects/${project.slug}/`} class="block rounded-2xl border border-white/10 bg-[var(--card)] p-5 hover:border-white/20 transition">
<div class="flex items-start justify-between gap-4">
<h3 class="text-lg font-semibold">{project.data.title}</h3>
<span class="text-xs text-slate-400">{new Date(project.data.date).toLocaleDateString()}</span>
</div>
<p class="mt-2 text-slate-300">{project.data.summary}</p>
<div class="mt-3 flex flex-wrap gap-2">
{project.data.tags?.map((t) => <span class="text-xs bg-white/10 px-2 py-0.5 rounded-full">{t}</span>)}
</div>
</a>
---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';
const posts = (await getCollection('blog')).sort((a,b) => +new Date(b.data.date) - +new Date(a.data.date));
---
<Base title="Blog â€” Vibhav Misra">
<section class="mx-auto max-w-6xl px-4 py-12">
<h1 class="text-3xl font-semibold">Blog</h1>
<ul class="mt-6 space-y-4">
{posts.map((post) => (
<li>
<a class="block rounded-xl border border-white/10 hover:border-white/20 p-5 bg-[var(--card)]" href={`/blog/${post.slug}/`}>
<h3 class="text-lg font-semibold">{post.data.title}</h3>
<p class="text-slate-300">{post.data.description}</p>
</a>
</li>
))}
</ul>
</section>
</Base>